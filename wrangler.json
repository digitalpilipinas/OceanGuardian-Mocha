{
  "$schema": "./OceanGuardian/node_modules/wrangler/config-schema.json",
  "name": "oceanguardian-mocha",
  "main": "./OceanGuardian/src/worker/index.ts",
  "tsconfig": "./OceanGuardian/tsconfig.worker.json",
  "build": {
    "command": "npm --prefix OceanGuardian ci && npm --prefix OceanGuardian run build && rm -f OceanGuardian/dist/oceanguardian/.dev.vars"
  },
  "compatibility_date": "2025-06-17",
  "compatibility_flags": [
    "nodejs_compat"
  ],
  "observability": {
    "enabled": true
  },
  "upload_source_maps": true,
  "assets": {
    "directory": "./OceanGuardian/dist/client",
    "not_found_handling": "single-page-application"
  },
  "r2_buckets": [
    {
      "binding": "R2_BUCKET",
      "bucket_name": "oceanguardian-uploads"
    }
  ]
}
